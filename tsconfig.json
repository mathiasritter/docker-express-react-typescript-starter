{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "target": "es2019",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "@thisproject/*": ["packages/*/src"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
